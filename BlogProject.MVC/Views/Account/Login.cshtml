@model LoginRequest
@{
    ViewData["title"] = "login";
    Layout = "~/Views/Shared/_Layout_Account.cshtml";
}

<div class="container align-content-center vh-100 p-5">
    <div class="align-items-center">
        <h1>Welcome To BlogApp</h1>
    </div>
    <div class="border border-2 p-5 rounded-2">

        <h2>
            Sign in or <a asp-action="Register" asp-controller="Account" class="text-decoration-underline text-success">create an account</a>
        </h2>

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-person"></i>
                    </span>
                    <input asp-for="Username" type="text" class="form-control" id="username" placeholder="Username">
                </div>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-lock"></i>
                    </span>
                    <input asp-for="Password" value="Password123!" type="password" class="form-control" id="password" placeholder="Password">
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <div>
                    <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="rememberMe">
                    <label class="form-check-label" for="rememberMe">Remember me</label>
                </div>
            </div>
            <div class="d-flex">
                <input type="submit" value="Sign in" class="btn btn-primary w-100" />
            </div>
        </form>
    </div>
</div>

<div class="blogapp-logo">
    BLOGAPP
</div>